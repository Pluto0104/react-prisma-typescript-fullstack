{
  "name": "messenger-project",
  "version": "1.0.0",
  "repository": "git@github.com:DylanMerigaud/messenger-project.git",
  "author": "DylanMerigaud <dylanmerigaud@gmail.com>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "backend",
      "frontend"
    ]
  },
  "private": true,
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
